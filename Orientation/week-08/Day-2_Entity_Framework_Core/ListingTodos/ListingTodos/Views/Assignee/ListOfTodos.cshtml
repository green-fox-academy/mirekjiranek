@model ListingTodos.Models.AssigneeViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>List of todos</title>
</head>
<body>
    <a asp-controller="Assignee" asp-action="ListOfAssignees">Back</a><br />
    <h2>Tasks for @Model.Assignee.Name</h2>
    @if (Model.AllTodos.Count() != 0)
    {
        <ul>
            @foreach (var item in Model.AllTodos)
            {
                <li>@item.Title</li>
            }
        </ul>
    }
    else
    {
        <h3>There are no tasks to do</h3>
    }
</body>
</html>
