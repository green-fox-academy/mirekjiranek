@model ListingTodos.Models.TodoViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>Edit Todo</h1>
    @using (Html.BeginForm("EditUser", "Todo", FormMethod.Post))
    {
        <div>
            @Html.HiddenFor(a => a.Todo.Id)
            @Html.Label("Todo Description")
            @Html.TextBoxFor(model => model.Todo.Title)
        </div>
        <div>
            @Html.LabelFor(model => model.Todo.IsUrgent)
            @Html.CheckBoxFor(model => model.Todo.IsUrgent)
        </div>
        <div>
            @Html.LabelFor(model => model.Todo.IsDone)
            @Html.CheckBoxFor(model => model.Todo.IsDone)
        </div>
        <div>
            <button type="submit">Submit</button>
            <a asp-controller="Todo" asp-action="Index">Cancel</a><br />
        </div>
    }


</body>
</html>  